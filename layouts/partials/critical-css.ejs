<style>
  :root {
    --ratio: 1.7;
    --scale: 1.25;
    --margin: 16px;

    --s-2: calc(var(--s-1) / var(--scale));
    --s-1: calc(var(--s0) / var(--scale));
    --s0: 1rem;
    --s1: calc(var(--s0) * var(--scale));
    --s2: calc(var(--s1) * var(--scale));
    --s3: calc(var(--s2) * var(--scale));
    --s4: calc(var(--s3) * var(--scale));

    --g1: calc(1rem * var(--ratio));
    --g2: calc(2rem * var(--ratio));
    --g3: calc(3rem * var(--ratio));
    --g4: calc(4rem * var(--ratio));
    --g6: calc(6rem * var(--ratio));

    --color1: #cc0e74;
    --color2: #67e8ff;
  }

  html {
    box-sizing: border-box;
    color: #333;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
    font-size: calc(100% + .2vw);
    line-height: var(--ratio);
    -webkit-text-size-adjust: 100%;
  }

  * {
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  body * + * {
    margin-top: var(--g1);
  }

  a {
    color: #000;
    text-decoration-color: var(--color1);
    text-decoration-thickness: .07em;
    text-underline-offset: .1em;
    transition: color .3s ease-in-out;
  }

  a:hover {
    color: var(--color1);
  }

  a[href^="#"] {
    text-decoration: none;
  }

  h1,
  h2,
  h3 {
    color: #000;
    max-width: 45ch;
  }

  ol,
  .writing {
    list-style: none;
  }

  time {
    color: #999;
    display: block;
    font-family: monospace;
    margin: 0;
    text-transform: uppercase;
  }

  main {
    margin: var(--g1) auto 0;
    padding: 0 var(--s0) var(--g3);
    max-width: 55ch;
  }

  main header {
    display: flex;
  }

  main header > * {
    margin-top: 0;
  }

  main header a {
    margin-left: 1rem;
  }

  main header svg {
    position: relative;
    top: .125em;
    width: 1rem;
    height: 1rem;
  }

  main h1 {
    flex-grow: 666;
    font-size: var(--s0);
  }

  main > p {
    margin-bottom: var(--g3);
  }

  main ul h2 {
    font-size: var(--s1);
    line-height: 1.2;
  }

  main .writing li:first-child {
    margin-bottom: var(--g2);
  }

  main .writing li:first-child h2 {
    font-size: var(--s2);
    max-width: 20ch;
  }
</style>
