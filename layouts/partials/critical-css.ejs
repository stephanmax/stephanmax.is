<style>
  :root {
    --ratio: 1.75;
    --scale: 1.25;
    --margin: 16px;

    --s-2: calc(var(--s-1) / var(--scale));
    --s-1: calc(var(--s0) / var(--scale));
    --s0: 1rem;
    --s1: calc(var(--s0) * var(--scale));
    --s2: calc(var(--s1) * var(--scale));
    --s3: calc(var(--s2) * var(--scale));
    --s4: calc(var(--s3) * var(--scale));

    --g1: calc(1rem * var(--ratio));
    --g2: calc(2rem * var(--ratio));
    --g3: calc(3rem * var(--ratio));
    --g4: calc(4rem * var(--ratio));
    --g6: calc(6rem * var(--ratio));

    --color1: #f76a8c;
    --color2: #67e8ff;
  }

  html {
    box-sizing: border-box;
    color: #333;
    font-family: georgia, serif;
    font-size: calc(100% + .2vw);
    line-height: var(--ratio);
    -webkit-text-size-adjust: 100%;
  }

  * {
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  body * + * {
    margin-top: var(--g1);
  }

  a {
    color: var(--color1);
    text-decoration-skip: edges;
    transition: color .5s;
  }

  a:hover {
    color: #000;
  }

  h1,
  h2,
  h3 {
    color: #000;
    max-width: 45ch;
  }

  h1 a,
  h2 a,
  h3 a {
    color: inherit;
    text-decoration: none;
  }

  h1 a:hover,
  h2 a:hover,
  h3 a:hover {
    color: var(--color1);
  }

  ol,
  .writing {
    list-style: none;
  }

  time {
    color: #999;
    display: block;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: var(--s-2);
    font-weight: 600;
    margin: 0;
    text-transform: uppercase;
  }

  main {
    margin: 0 auto;
    padding: 0 var(--s0) var(--g3);
    max-width: 45ch;
  }

  main header {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    margin: var(--g1) 0 var(--g3);
  }

  main h1 {
    display: inline-block;
    font-size: var(--s0);
  }

  main ul h2 {
    font-size: var(--s1);
    line-height: 1.2;
  }

  main .writing li:first-child {
    margin-bottom: var(--g2);
  }

  main .writing li:first-child h2 {
    font-size: var(--s2);
  }
</style>
