---
import BaseLayout from './BaseLayout.astro';
import BaseHeader from './BaseHeader.astro';
import BlogItem from '../components/BlogItem.astro';

const post = Astro.props.content;
const { pathname } = Astro.request.url;
---

<BaseLayout>
  <BaseHeader />
  <BlogItem post={post} path={pathname} standalone={true}>
    <slot />
  </BlogItem>
</BaseLayout>
